{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$protected": false,
    "type": "object",
    "$id": "TodoInput",
    "properties": {
        "description": {
            "type": "string"
        },
        "priority": {
            "type": "integer"
        },
        "title": {
            "type": "string"
        },
        "status":{
            "type": "string",
            "enum": [
                "in_progress",
                "complete",
                "cancel"
            ]
        }
    },
    "required": [
        "description",
        "priority",
        "title"
    ]
}